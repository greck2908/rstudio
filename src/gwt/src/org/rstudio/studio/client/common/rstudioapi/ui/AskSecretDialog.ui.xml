<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:widget="urn:import:org.rstudio.core.client.widget">

   <ui:style>
      .panel {
         width: 330px;
      }
      .secret {
         width: 320px;
         margin-bottom: 6px;
      }
      .enabled {
         margin-bottom: 6px;
      }
      .disabled {
         color: #777777;
         margin-bottom: 6px;
         display: inline-block;
      }
      .disabled div {
         display: inline-block;
      }
      .keyring {
         display: inline-block;
         text-decoration: underline;
         color: #0000FF;
         cursor: pointer;
      }
   </ui:style>

   <g:HTMLPanel stylePrimaryName="{style.panel}">
      <table>
         <tr>
            <td width="100%">
               <widget:FormLabel ui:field="label_"/>
            </td>
         </tr>
         <tr>
            <td width="100%">
               <g:PasswordTextBox ui:field="textbox_"
                                  stylePrimaryName="{style.secret}"/>
            </td>
         </tr>
         <tr>
            <td width="100%">
               <g:HTMLPanel ui:field="rememberEnabled_" stylePrimaryName="{style.enabled}">
                 <g:CheckBox ui:field="remember_"
                             text="Remember with keyring"/>
               </g:HTMLPanel>
               <g:HTMLPanel ui:field="rememberDisabled_" stylePrimaryName="{style.disabled}">
                 <g:CheckBox enabled="false" text=""/>
                 <g:Label text="Remember with "/>
                 <g:Label ui:field="install_" text="keyring" stylePrimaryName="{style.keyring}"/>
               </g:HTMLPanel>
            </td>
         </tr>
      </table>
   </g:HTMLPanel>

</ui:UiBinder>